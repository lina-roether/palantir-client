mixin palantir-input-row(id, label)
  div(class="palantir-input-row js_palantir-input-row")
    div(class="palantir-input-row__label")
      label(for=id) #{label}
      div(class="palantir-input-row__error js_palantir-input-row__error")
    block

mixin palantir-input-row-description()
  div(class="palantir-input-row-description")
    div(class="copy-75 palantir-input-row-description__content")
      block
