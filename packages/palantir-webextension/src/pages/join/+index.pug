extends ../layout.pug

block append head
  title Palantir - join room
  link(rel="stylesheet" href=include("pages/join/+styles.scss"))

block content
  div(id="join__content")
  template(id="join__template-error")
    +palantir-card("Invalid URL")(class="join__card")
      div(class="js_join__error-message")
  template(id="join__template-join-room")
    +palantir-card("Join room")(class="join__card")
      form(id="join__join-room-form")
        +palantir-input-row("join__join-room-password", "Password")
          +palantir-text-field()(id="join__join-room-password", name="Password")
        +palantir-form-actions()
          +palantir-button("primary")(class="js_join__join-room" type="submit") Join room

block append scripts
  script(src=include("pages/join/+join.ts"))
