extends ../layout.pug

block append head
  link(rel="stylesheet" href=include("pages/options/+styles.scss"))
  title Palantir Settings

block content
  +palantir-card("Settings")(class="options__wrapper")
    form(id="options_form")
      ul(class="options__inputs")
        li(class="options__inputs-row")
          +palantir-text-field()(class="options__input" name="server_url" id="server_url")
          label(for="server_url" class="copy-100 no-gutter") Server URL
      li(class="options__inputs-row")
        +palantir-button("primary")(type="submit" class="options__input") Save
        +palantir-button("secondary")(id="cancel" class="options__input") Cancel

block append scripts
  script(src=include("pages/options/+options.ts"))
