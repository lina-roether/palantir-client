extends ../layout.pug

block append head
  link(rel="stylesheet" href=include("pages/popup/+styles.scss"))
  title Palantir

block content
  +palantir-card("Palantir")
    div(id="popup__content")
  template(id="popup__template-options-incomplete")
    p(class="copy-100")
      | Your configuration is incomplete. Please open the options page
      | and add all missing fields.
    +palantir-button("primary")(class="popup__button js_popup__open-options")
  template(id="popup__template-start-session")
    +palantir-button("secondary")(class="popup__button js_popup__open-options")
    +palantir-button("primary")(class="popup__button js_popup__start-session") Start session

block append scripts
  script(src=include("pages/popup/+popup.ts"))
