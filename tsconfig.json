{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"checkJs": true
	},
	"include": [
		"*.config.mjs",
		"*.config.js",
		"packages/**/*.ts",
		"packages/*/*.config.mjs",
		"packages/*/*.config.js"
	],
}
